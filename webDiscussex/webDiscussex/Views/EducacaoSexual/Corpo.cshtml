
@{
    ViewBag.Title = "Sobre o Nosso Corpo";
    ViewBag.Corpo = "corpo";
    Layout = "~/Views/Shared/_LayoutEducacaoSexual.cshtml";
    ViewBag.Intro = "corpo-intro";
    ViewBag.Exibir = "corpo-div";
}

<div id='@ViewBag.Exibir' class="container">
    @foreach (var tema in ViewBag.TabelaCorpo)
    {
        if (tema.Id % 2 != 0)
        {
            <section class='a row'>
                <div class="col col-2">
                    <img src="~/">
                </div>
                <div class="col col-2 texto">
                    <h1>@tema.Titulo</h1>
                    <p>
                        @tema.Texto
                    </p>
                </div>
            </section>
        }
        else
        {
            <section class='b row'>
                <div class="col col-2">
                    <h1>@tema.Titulo</h1>
                    <p>
                        @tema.Texto
                    </p>
                </div>
                <div class="col col-2">
                    <img src="~/">
                </div>
            </section>
        }
    }
</div>

