
@{
    ViewBag.Title = "Responder";
    Layout = "~/Views/Shared/_LayoutForum.cshtml";
}

<article id="corpo" class="container">
    <div class="row">
        <div class="col col-2">
            <img id="imgPerguntar" src="~/img/responder.png"/> @*Img de Responder*@
        </div>
        <div class="col col-2">
            <form action="/ForumDiscussex/AdicionarResposta" method="post">
                <div class="col col-2">
                    <h1>@ViewBag.Pergunta.Titulo</h1>
                    <h2>@ViewBag.Pergunta.Descricao</h2>
                </div>
                <div class="campoTexto">
                    <textarea cols="60" rows="10" name="resp" id="txtPergunta" class="Input-text" placeholder="Resposta"></textarea>
                    <label for="input" class="Input-label">Resposta</label>
                </div>
                <input type="submit" class="btn" value="Responder">
            </form>
        </div>
    </div>
</article>
