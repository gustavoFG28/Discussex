
@{
    ViewBag.Title = "Perguntar";
    Layout = "~/Views/Shared/_LayoutForum.cshtml";
}
<link type="text/css" rel="stylesheet" href="~/Content/pergunta.css" />

<article id="corpo" class="container">
    <div class="row">
           <div class="col col-2">
               <img id="imgPerguntar" src="~/img/perguntar.png"/> @* img faça uma pergunta*@
           </div>
        <div class="col col-2">
            <form action="/ForumDiscussex/FazerPergunta" method="post">
                <div class="campoTexto">
                    <input type="text" name="p.Titulo" id="txtTitulo" class="Input-text" placeholder="Titulo" required>
                    <label for="input" class="Input-label big">Título</label>
                </div>
                <div class="campoTexto">
                    <input type="text" name="p.PalavraChave" id="palavraChave" class="Input-text" placeholder="Palavra Chave" required>
                    <label for="input" class="Input-label big">Palavra chave</label>
                </div>
                <div class="campoTexto">
                    <textarea cols="60" rows="10" name="p.Descricao" id="txtPergunta" class="Input-text" placeholder="Pergunta" required></textarea>
                    <label for="input" class="Input-label big">Pergunta</label>
                </div>
                <div class="check">
                    @Html.CheckBox("anonimo", false, new { @class = "chk" })
                    <label for="anonimo">
                        <div><i class="fa fa-check"></i></div>Anônimo
                    </label>
                </div>
                <input type="submit" class="btn" value="Perguntar">
            </form>
        </div>
    </div>
</article>