
@{
    ViewBag.Title = "Camisinhas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/mapa.css" type="text/css" rel="stylesheet">
<script src="~/Scripts/mapa.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBh6JK23HFsrPff9iyGpdfzztePcfRhq4&callback=iniciarMapa"></script>
<link rel="stylesheet" type="text/css" href="~/Content/nice-select.css" />
<script src="~/Scripts/jquery.nice-select.js"></script>
<script src="~/Scripts/Select.js"></script>
<div class="row">
    <div class="col col-3">
        <div class="campoEndereco">
            <input type="text" id="txtCep" class="Input-text" placeholder="CEP">

        </div>
        <button class="btn" id="pesquisarCasa">Pesquisar Casa</button>


    </div>
    <div class="col col-3">
        <select id="mode">
            <option value="DRIVING">Carro</option>
            <option value="WALKING">A pé</option>
            <option value="BICYCLING">Bicicleta</option>
            <option value="TRANSIT">Ônibus</option>
        </select>
        <button class="btn" id="pesquisarPosto">Buscar Camisinha</button>
    </div>
    <div class="col col-3"><button class="btn" id="buscarCaminho">Buscar caminho camisinha mais próxima</button></div>
</div>
<div id="map"></div>
<div class="row">
    <div id="distancia">
        <div id="rota"><p> <span id="total"></span></p></div>
    </div>
</div>
