<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="~/Content/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr"
          crossorigin="anonymous">
    <script src="~/Scripts/jquery-3.4.0.min.js"></script>
    <script src="~/Scripts/menuEffects.js"></script>
    <title>DISCUSSEX | @ViewBag.Title</title>
</head>
<body class="@ViewBag.ParOuImpar">
    <header id="menu">
        <div class="menu-icon">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
        <img id="logo" src="~/img/Logo.png" alt="vine">
        <nav>
            <ul>
                <a href="~/Home">
                    <li>
                        Home
                    </li>
                </a>
                <a href="~/ForumDiscussex">
                    <li>
                        Fórum
                    </li>
                </a>

                @if (Session["emailUsuario"] == null)
                {
                    <a href="~/Usuario/Login">
                        <li id="linkLogin">
                            Login
                        </li>
                    </a>
                    <a href="~/Usuario/Cadastro">
                        <li>
                            Cadastro
                        </li>
                    </a>
                }
                else
                {
                   <a href="~/Usuario/Configuracoes">
                        <li>
                            Configurações
                        </li>
                    </a>
                    <a href="~/Usuario/Login">
                        <li id="btnDeslogar">
                            Sair
                        </li>
                    </a>
                }
            </ul>
        </nav>
    </header>
    @RenderBody()
    <footer id="rodape">
        <div id="footerContent">
            <div class="container">
                <ul>
                    <li>
                        <a href="">SOBRE NÓS</a>
                    </li>
                    <li>
                        <a href="">BACKEND</a>
                    </li>
                    <li class="iconSocialMedia">
                        <a href="">
                            <i class="fab fa-facebook"></i>
                        </a>
                    </li>
                    <li class="iconSocialMedia">
                        <a href="">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>
                    <li class="iconSocialMedia">
                        <a href="">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="footerCopyright">
            <div class="container">
                © 2019 COPYRIGHT. TODOS OS DIREITOS RESERVADOS.
            </div>
        </div>
    </footer>
</body>
</html>