<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/tema.css" rel="stylesheet">
    <link href="~/Content/home.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr"
          crossorigin="anonymous">
    <script src="~/Scripts/jquery-3.4.0.min.js"></script>
    <script src="~/Scripts/menuEffects.js"></script>
    <title>DISCUSSEX | @ViewBag.Title</title>
</head>
<body id="@ViewBag.Corpo">
    <header id="menu">
        <div class="menu-icon">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
        <img id="logo" src="~/img/Logo.png" alt="vine">
        <nav>
            <ul>
                <a href="~/Home">
                    <li>
                        Home
                    </li>
                </a>
                <a href="~/ForumDiscussex">
                    <li>
                        Fórum
                    </li>
                </a>

                @if (Session["emailUsuario"] == null)
                {
                    <a href="~/Usuario/Login">
                        <li id="linkLogin">
                            Login
                        </li>
                    </a>
                    <a href="~/Usuario/Cadastro">
                        <li>
                            CADASTRO
                        </li>
                    </a>
                }
                else
                {
                    <a href="~/Usuario/Configuracoes">
                        <li>
                            Configurações
                        </li>
                    </a>
                    <a href="~/Usuario/Sair">
                        <li id="btnDeslogar">
                            Sair
                        </li>
                    </a>
                }

            </ul>
        </nav>
    </header>


    <section id='@ViewBag.Intro' class="container intros" style="background-image: url(/@ViewBag.ListaImagens[0].Link)">
        <h1>@ViewBag.Tabela[0].Titulo<hr></h1>
    </section>

    <div id='@ViewBag.Exibir' class="container linhaTema">
        @for (int i = 1; i < ViewBag.Tabela.Count; i++)
        {
            if (ViewBag.Tabela[i].Id % 2 != 0)
            {
                <section class='a row'>
                    <div class="col col-2 divImagem">
                        <img  src="~/@ViewBag.ListaImagens[i].Link">
                    </div>
                    <div class="col col-2 texto">
                        <h1 class="tituloTema">@ViewBag.Tabela[i].Titulo</h1>
               @{
                    string source = ViewBag.Tabela[i].Texto;
                    string[] stringSeparators = new string[] { "<p>", "</p>" };
                    string[] result = source.Split(stringSeparators, StringSplitOptions.RemoveEmptyEntries);
                    foreach (string paragrafo in result)
                    {
                        <p>
                            @paragrafo
                        </p>
                    }
                }
                    </div>
                </section>
            }
            else
            {
                <section class='b row'>
                    <div class="col col-2 texto">
                        <h1 class="tituloTema">@ViewBag.Tabela[i].Titulo</h1>
               @{
                    string source = ViewBag.Tabela[i].Texto;
                    string[] stringSeparators = new string[] { "<p>", "</p>" };
                    string[] result = source.Split(stringSeparators, StringSplitOptions.RemoveEmptyEntries);
                    foreach (string paragrafo in result)
                    {
                        <p>
                            @paragrafo
                        </p>
                    }
                }
                </div>
                   <div class="col col-2 divImagem">
                      <img  src="~/@ViewBag.ListaImagens[i].Link">
                   </div>
                </section>
            }
         }
    </div>

    @RenderBody()

    <footer id="rodape">
        <div id="footerContent">
            <div class="container">
                <ul>
                    <li>
                        <a href="~/Home">HOME</a>
                    </li>
                    <li>
                        <a href="">SOBRE NÓS</a>
                    </li>
                    <li>
                        <a href="~/Home/Bastidores">BACKEND</a>
                    </li>
                    <li class="iconSocialMedia">
                        <a href="">
                            <i class="fab fa-facebook"></i>
                        </a>
                    </li>
                    <li class="iconSocialMedia">
                        <a href="">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>
                    <li class="iconSocialMedia">
                        <a href="">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="footerCopyright">
            <div class="container">
                © 2019 COPYRIGHT. TODOS OS DIREITOS RESERVADOS.
            </div>
        </div>
    </footer>
</body>
</html>